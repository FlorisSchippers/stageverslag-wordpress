# Ignore node modlues
/build/node_modules

# Ignore vendor packages
/vendor/*
!vendor/.gitkeep

# Ignore All sorts of editor config files
sftp-config.json
sftp-config-alt.json
.remote-sync.json

# =========================
# WordPress Base Ignores
# ========================

# Ignore WordPress Installation
/webroot/wp/*

# Ignore the assets directory
/webroot/assets/*

# Ignore the upgrade directory
/webroot/assets/upgrade

# Don’t ignore plugins dir, but ignore everything inside
!/webroot/assets/plugins
/webroot/assets/plugins/*

# Don't ignore our custom plugins
!/webroot/assets/plugins/wp-media-folder
!/webroot/assets/plugins/w3tc-wp-loader.php
!/webroot/assets/plugins/burst-*

# Don’t ignore themes dir, but ignore everything inside
!/webroot/assets/themes
/webroot/assets/themes/*

# Don’t ignore your theme
!/webroot/assets/themes/stageverslag

# Ignore theme assets generated by webpack
# Replace "stageverslag" with theme name
/webroot/assets/themes/stageverslag/js/*
/webroot/assets/themes/stageverslag/css/*
/webroot/assets/themes/stageverslag/images/*

# Ignore the uploads folder
/webroot/assets/uploads/*

# Ignore the .env file
.env
.env.*
!.env.example
composer.lock
build/.stylelintrc
build/browserslist
!build/package.json
build/README.md
!build/serverConfig.js
!build/webpack.config.js
build/assets/burst-logo-vulkaan.png
!build/configs/base.js
!build/configs/dev.js
!build/configs/prod.js
!build/npm-debug.log
.idea/*